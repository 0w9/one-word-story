<div class="container mx-auto mt-8 px-4">
  <h1 class="text-3xl font-bold mb-6">Stories</h1>

  <% if @stories.any? %>
    <ul class="space-y-4">
      <% @stories.each do |story| %>
        <li class="border p-4 rounded-lg shadow">
          <h2 class="text-xl font-semibold"><%= story.title %></h2>
          <%= link_to "Read story", story_path(story), class: "text-blue-500 hover:text-blue-700" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-600">No stories available yet.</p>
  <% end %>

  <%= link_to "Create New Story", new_story_path, class: "mt-6 inline-block bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" %>
</div>
