<div class="container mx-auto mt-8 px-4">
  <h1 class="text-3xl font-bold mb-4"><%= @story.title %></h1>
  <p class="mb-4"><%= @story.story %></p>

  <%= form_with(url: add_word_story_path(@story), method: :post, local: true, class: "mb-4") do |f| %>
    <%= f.text_field :word, placeholder: "Enter a word", class: "border rounded p-2 mr-2" %>
    <%= f.submit "Add Word", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
  <% end %>

  <%= link_to "Back to Stories", stories_path, class: "text-blue-500 hover:text-blue-700" %>
</div>
