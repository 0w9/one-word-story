<div class="container mx-auto mt-8 px-4">
  <h1 class="text-3xl font-bold mb-6">Create a New Story</h1>

  <%= form_with(model: @story, local: true, class: "space-y-4") do |f| %>
    <div>
      <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>

    <div>
      <%= f.label :story, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :story, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
    </div>

    <div>
      <%= f.submit "Create Story", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>

  <%= link_to "Back to Stories", stories_path, class: "mt-4 inline-block text-sm text-indigo-600 hover:text-indigo-500" %>
</div>
